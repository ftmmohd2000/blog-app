{
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "transform": {
    "\\.(ts|tsx)$": "ts-jest"
  },
  "setupFiles": ["raf/polyfill"],
  "testRegex": "/tests/.*\\.test.(ts|tsx|js)$",
  "setupFilesAfterEnv": ["<rootDir>tests/setupTests.ts"],
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/tsconfig.test.json"
    }
  }
}
