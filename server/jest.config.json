{
  "setupFiles": ["dotenv/config"],
  "globalSetup": "./src/tests/setupTests.ts",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "testPathIgnorePatterns": ["./node_nodules/"],
  "verbose": true,
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "coverageReporters": ["json", "lcov", "text", "clover"]
}
